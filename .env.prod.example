# Production Environment
NODE_ENV=production
PORT=3000

# MySQL
MYSQL_HOST=your-production-mysql-host
MYSQL_PORT=3306
MYSQL_USERNAME=prod_user
MYSQL_PASSWORD=very-strong-production-password
MYSQL_DATABASE=node_art_prod

# MongoDB
MONGODB_URI=mongodb://your-production-mongodb-host:27017/node_art_prod

# Redis
REDIS_HOST=your-production-redis-host
REDIS_PORT=6379
REDIS_PASSWORD=strong-redis-password
REDIS_DB=0

# JWT (CRITICAL: Use cryptographically secure random strings)
JWT_ACCESS_SECRET=production-access-secret-minimum-32-characters-random
JWT_REFRESH_SECRET=production-refresh-secret-minimum-32-characters-random

# Encryption (CRITICAL: Use cryptographically secure random strings)
ENCRYPTION_KEY=production-encryption-32-chars
ENCRYPTION_IV=production-iv-16

# CORS
CORS_ORIGIN=https://example.com,https://www.example.com

# Pre-Production Environment
NODE_ENV=ppd
PORT=3000

# MySQL
MYSQL_HOST=your-ppd-mysql-host
MYSQL_PORT=3306
MYSQL_USERNAME=ppd_user
MYSQL_PASSWORD=strong-password-change-me
MYSQL_DATABASE=node_art_ppd

# MongoDB
MONGODB_URI=mongodb://your-ppd-mongodb-host:27017/node_art_ppd

# Redis
REDIS_HOST=your-ppd-redis-host
REDIS_PORT=6379
REDIS_PASSWORD=redis-password-change-me
REDIS_DB=0

# JWT (MUST be strong random strings)
JWT_ACCESS_SECRET=generate-strong-random-secret-here
JWT_REFRESH_SECRET=generate-strong-random-secret-here

# Encryption (Generate cryptographically secure random strings)
ENCRYPTION_KEY=generate-32-character-secure-key
ENCRYPTION_IV=generate-16-iv-k

# CORS
CORS_ORIGIN=https://ppd.example.com

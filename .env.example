# Environment
NODE_ENV=local

# Server
PORT=3000

# MySQL Configuration
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USERNAME=root
MYSQL_PASSWORD=password
MYSQL_DATABASE=node_art_local

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/node_art_local
MONGODB_DATABASE=node_art_local

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT Configuration
JWT_ACCESS_SECRET=your-secret-access-key-change-in-production
JWT_REFRESH_SECRET=your-secret-refresh-key-change-in-production

# Encryption Configuration (Must be exactly 32 characters for key, 16 for IV)
ENCRYPTION_KEY=12345678901234567890123456789012
ENCRYPTION_IV=1234567890123456

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# MySQL Root Password (for Docker)
MYSQL_ROOT_PASSWORD=rootpassword
